@model IEnumerable<ArtEx.EF.Product>



    <section is="artistsSection">
        <div class="container">
            <h2>Galeria</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>

            @foreach (var item in Model)
            {
        <div class="productCard" onclick="window.location.href = '@Url.Action("View", "Products", new { id = item.id })';">
            @{
                string imagenFile = $"public/pictures/{item.image}";
            }
            <img class="photo" src="@imagenFile" />
            <br />
            <span class="title">
                @Html.DisplayFor(modelItem => item.title)
            </span>
            <br />
            <span class="author">
                @Html.DisplayFor(modelItem => item.artist.fullName)
            </span>
            <br />
            <span class="price">
                Precio : $@Html.DisplayFor(modelItem => item.price)
            </span>
        </div>
            }


        </div>
    </section>