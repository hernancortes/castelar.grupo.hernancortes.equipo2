@model Product
@{
    string imagenFile = $"/public/pictures/{Model.image}";
}

<section is="artistsSection">
    <div class="row content container">

        <div class="artistForm">
            
            <div>
                <span class="title">
                    @Model.title <small>(@Model.artist.fullName)</small>
                </span>
                <a class="boton_amarillo" href="/Products/Edit/@Model.id">Editar</a>
            </div>
            <img class="photo" src="@imagenFile" />
            <span class="">
                <b>Descripcion:</b><br />
                @Html.DisplayFor(model => model.description)
            </span><br /><br />
            <span class="">
                <b>Precio:</b><br />
                @Html.DisplayFor(model => model.price)
            </span><br /><br />
            <span class="">
                <b>Cantidad vendida:</b><br />
                @Html.DisplayFor(model => model.quantitySold)
            </span><br /><br />
                         <span class="">
                             <b>Estrellas:</b><br />
                             <img src="~/public/estrellas.png" />
                         </span>
        </div>
    </div>
</section>


