@{
    var mostSelled = ViewBag.mostSelled;
    var bestRanked = ViewBag.bestRanked;
    string imagenFile = "";
}
<link href="~/Content/Galeria.css" rel="stylesheet" />
<link href="~/Content/Carrito.css" rel="stylesheet" />

<div>
    <img style="width:100%;margin-top:30px;" src="~/public/pictures/parthenon.jpg" />
</div>

<section id="sec00">

    <div class="carrito-container">

        <div class="carrito-titulo">
            Productos mas vendidos
        </div>

        @foreach (Product item in mostSelled)
        {
            imagenFile = $"public/pictures/{item.image}";
    <div class="carrito-item" onclick="AddProduct(@item.id,1)">

        <div class="carrito-imagen">
            <img src="@imagenFile"/>
        </div>

        <div class="carrito-descripcion">
            <span>
                @item.title
            </span>
            <span>
                @item.artist.fullName
            </span>
            <span>
                $@item.price
            </span>
            <span>
                @item.quantitySold Ventas
            </span>
        </div>


    </div>
        }

    </div>

    <div class="carrito-container">

        <div class="carrito-titulo">
            Productos mejor rankeados
        </div>

        @foreach (Product item in bestRanked)
        {
            imagenFile = $"public/pictures/{item.image}";
            string star = $"public/star{item.avgStars.ToString("n0")}.png";
            <div class="carrito-item" onclick="AddProduct(@item.id,1)">

                <div class="carrito-imagen">
                    <img src="@imagenFile"/>
                </div>

                <div class="carrito-descripcion">
                    <span>
                        @item.title
                    </span>
                    <span>
                        @item.artist.fullName
                    </span>
                    <span>
                        $@item.price
                    </span>
                    <span>
                        <img src="@star" />
                    </span>
                </div>

            </div>
        }

    </div>

</section>

